<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Galindo_P2.MainPage"
             Title="MainPage">
    <StackLayout VerticalOptions="CenterAndExpand"
                 HorizontalOptions="CenterAndExpand"
                 Padding="20">
        <Label Text="Bienvenido a la aplicación de Fernando Galindo"
               FontSize="Large"
               HorizontalOptions="Center"
               Margin="0,0,0,20" />

        <Image Source="smiley.png"
               WidthRequest="150"
               HeightRequest="150"
               HorizontalOptions="Center"
               Margin="0,0,0,40" />

        <Button Text="Chistes"
                Clicked="OnChistesButtonClicked"
                HorizontalOptions="FillAndExpand"
                Margin="0,10" />

        <Button Text="About"
                Clicked="OnAboutButtonClicked"
                HorizontalOptions="FillAndExpand"
                Margin="0,10" />
    </StackLayout>
</ContentPage>