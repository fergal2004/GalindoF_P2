<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.AbsoluteLayout"
             Title="Layout Absoluto">
    <AbsoluteLayout>
        <Image Source="user_icon.png"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               AbsoluteLayout.LayoutBounds="0.5,0,50,50" 
               Aspect="AspectFit"/>

        <ScrollView AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" x:Name="scrollview">
            <StackLayout Padding="20" Spacing="10">
                <Label Text="chiste del api" FontSize="20" FontAttributes="Bold" Margin="0,70,0,0"/>
                
            </StackLayout>
        </ScrollView>

        <Button Text="otro chiste"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="0.95,0.95,-1,-1"  Clicked="OnGoToGridLayoutClicked"/>
    </AbsoluteLayout>
</ContentPage>